    <script type="text/javascript">
        //提交表单
        $('#form').ajaxSubmit({
            dataType : 'json',
            success  : function(data, textStatus){               
                layer.msg(data.info);
                if (data.status == 1) {
                    setTimeout(function(){
                        window.location = "/";
                    },1500);
                }
            },
            error : function(data, status , e){
                layer.msg(e);
            }
        });
